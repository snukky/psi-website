@import 'font-awesome-sprockets';
@import 'font-awesome';

.sidebar-nav-subitem {
  font-size: 0.9rem;
  line-height: 1.5;
  padding-left: 1rem;
}
.sidebar-lang {
  .active {
    font-weight: bold;
  }
}
.member {
  clear: both;

  .member-photo {
    background-image: url("{% asset_path silhouette.jpg %}");
    background-size: cover;
    border-radius: 50%;
    display: block;
    height: 7em;
    width: 7em;
    margin-bottom: .5rem;
    -moz-border-radius: 50%;
    -webkit-border-radius: 50%;
  }
  .member-name {
    font-weight: bold;
  }

  {% for member in site.data.members %}
    {% if member.photo.nil? or member.photo != false %}
    {% assign img = member.id | append:'.jpg' %}
    .photo-{{ member.id }} {
      background-image: url("{% asset_path {{img}} %}");
    }
    {% endif %}
  {% endfor %}

  .member-description {
    padding-bottom: 1.5rem;
  }
  .member-links {
    padding-left: .5rem;
  }
}
.member:nth-child(odd) {
  .member-photo {
    float: left;
    margin-right: 1rem;
  }
}
.member:nth-child(even) {
  .member-photo {
    float: right;
    margin-left: .2rem;
  }
}

.seminars {
  .seminar {
    border-top: 1px solid #e5e5e5;
    clear: both;
    margin: 1rem 0;
    overflow: auto;
    padding: .25rem .5rem;

    .date {
      float: left;
      width: 20%;
    }
    .box {
      float: right;
      width: 80%;
    }
    .title {
      font-weight: bold;
    }
    .author {
      font-style: italic;
    }
    .institute {
      font-size: small;
      vertical-align: top;
    }
  }
}
