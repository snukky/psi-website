.sidebar-lang {
  .active {
    font-weight: bold;
  }
}
.member {
  clear: both;
  padding-bottom: 1rem;

  .member-photo {
    background-image: url("{% asset_path silhouette.jpg %}");
    background-size: cover;
    border-radius: 50%;
    display: block;
    height: 7em;
    width: 7em;
    margin-bottom: .5rem;
    -moz-border-radius: 50%;
    -webkit-border-radius: 50%;
  }
  .member-name {
    font-weight: bold;
  }

  .photo-jassem {
    background-image: url("{% asset_path jassem.jpg %}");
  }
  .photo-rjawor {
    background-image: url("{% asset_path rjawor.jpg %}");
  }
  .photo-tdwojak {
    background-image: url("{% asset_path tdwojak.jpg %}");
  }
}
.member:nth-child(even) {
  .member-photo {
    float: left;
    margin-right: 1rem;
  }
}
.member:nth-child(odd) {
  .member-photo {
    float: right;
    margin-left: 1rem;
  }
}

.seminars {
  .seminar {
    border-top: 1px solid #e5e5e5;
    clear: both;
    margin: 1rem 0;
    overflow: auto;
    padding: .25rem .5rem;

    .date {
      float: left;
      width: 20%;
    }
    .box {
      float: right;
      width: 80%;
    }
    .title {
      font-weight: bold;
    }
    .author {
      font-style: italic;
    }
  }
}
